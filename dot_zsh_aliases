# Commonly used aliases
alias ls='ls -F --color=auto'
alias l='ls -F'
alias ll='ls -l'
alias la='ls -las'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias duh='du -hsx * 2>/dev/null | sort -hr | head -n 6'
alias ip='ip -c'
alias vim='nvim'

# Remove squashfs (snaps) from df
alias df='df -x"squashfs"'

# General aliases
alias pandock='docker run --rm --platform linux/amd64 -v "$(pwd):/data" -u $(id -u):$(id -g) pandoc/extra --from markdown --template eisvogel --listings'
alias projects='cd ~/Projects'

# Marksmen aliases
alias rep='gcloud container clusters get-credentials rep-cluster --region=europe-west4-a'
alias talentro='gcloud container clusters get-credentials talentro-staging --region=europe-west4-a'

# Generate password
alias createpassword="openssl rand -base64 30"

## Git autocompletion aliases
#
for al in `git --list-cmds=alias`; do
    alias g$al="git $al"
done
