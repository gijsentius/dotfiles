
# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/gijs/Downloads/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/gijs/Downloads/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/gijs/Downloads/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/gijs/Downloads/google-cloud-sdk/completion.zsh.inc'; fi

source <(fzf --zsh)

source ~/.config/kube_complete.sh

# General aliases
alias pandock='docker run --rm --platform linux/amd64 -v "$(pwd):/data" -u $(id -u):$(id -g) pandoc/extra --from markdown --template eisvogel --listings'
alias projects='cd ~/Projects'

# Marksmen aliases
alias rep='gcloud container clusters get-credentials rep-cluster --region=europe-west4-a'
alias talentro='gcloud container clusters get-credentials talentro-staging --region=europe-west4-a'

eval "$(starship init zsh)"

export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=1000000000
export SAVEHIST=1000000000
setopt EXTENDED_HISTORY

# Brew specifics
if [[ $(command -v brew) != "" ]]; then
    export PKG_CONFIG_PATH="$(brew --prefix)/Cellar/mysql-client/9.0.1/lib/pkgconfig"
fi
